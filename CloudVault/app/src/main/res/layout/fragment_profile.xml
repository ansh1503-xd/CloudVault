<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.ProfileFragment"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/montserrat_semibold"-->
<!--            android:text="Profile"-->
<!--            android:textColor="@color/mainColor"-->
<!--            android:textSize="50dp" />-->

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hello, "
               android:textColor="@color/mainColor"
               android:fontFamily="@font/montserrat_semibold"
               android:textSize="35sp"/>

           <TextView
               android:id="@+id/tvProfileName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/mainColor"
               android:text="Hello world"
               android:fontFamily="@font/montserrat_reg"
               android:textSize="35sp"/>

       </LinearLayout>

        <LinearLayout
            android:id="@+id/llChangePin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30sp"
            android:background="@drawable/list_bg"
            android:gravity="center|start"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/change_pass" />

            <TextView
                android:id="@+id/tvChangePin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_regular"
                android:text="Change PIN"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llYourVault"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/list_bg"
            android:gravity="center|start"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vault"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your vault"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginStart="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/next"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPanicSwitch"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/list_bg"
            android:gravity="center|start"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/panic_switch"
                app:tint="@color/mainColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panic Switch"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginStart="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/next"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>